<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btnJugar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnJugar2"
        android:layout_alignRight="@+id/btnJugar2"
        android:layout_alignTop="@+id/btnJugar2"
        android:layout_marginTop="47dp"
        android:background="@drawable/custom_button"
        android:minHeight="45dip"
        android:text="@string/jugar" />

    <Button
        android:id="@+id/btnAcercaDe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnJugar1"
        android:layout_alignRight="@+id/btnJugar1"
        android:layout_below="@+id/btnJugar1"
        android:background="@drawable/custom_button"
        android:minHeight="45dp"
        android:text="@string/acercade" />

    <Button
        android:id="@+id/btnSalir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_button"
        android:minHeight="50dp"
        android:minWidth="64dp"
        android:text="@string/salir" />

    <Button
        android:id="@+id/btnJugar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:background="@drawable/custom_button"
        android:minHeight="45dip"
        android:text="@string/jugar2" />

    <Button
        android:id="@+id/btnEstadisticas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAcercaDe"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_button"
        android:text="@string/est" />

</RelativeLayout>
